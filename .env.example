# Hugging Face API Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Solana Wallet Configuration
# Private key for the faucet wallet that distributes CHAT tokens
# Can be in base58 or JSON array format
FAUCET_PRIVATE_KEY=your_faucet_private_key_here

# Platform wallet address that receives payments from users
# This is the wallet address where user payments (0.1 SOL) will be sent
NEXT_PUBLIC_PLATFORM_WALLET=your_platform_wallet_address_here
PLATFORM_WALLET_ADDRESS=your_platform_wallet_address_here

# Optional: Set custom payment amount (in SOL)
# PAYMENT_AMOUNT=0.1
